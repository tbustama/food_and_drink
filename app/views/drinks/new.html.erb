<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p><%= error %></p>
    <% end %>
<% end %>
<h2>New Drink Recipe</h2>
<%= form_with model:@drink do |f|%>
    <%= f.label :name %> <br>
    <%= f.text_field :name %> <br><br>

    <%= f.label :category %> <br>
    <%= f.text_field :category %><br><br>

    <%= f.label :ingredients %> <br>
    <%= f.text_area :ingredients %><br><br>

    <%= f.label :directions %> <br>
    <%= f.text_area :directions %><br><br>

    <%= f.label :image_url %> <br>
    <%= f.text_field :image_url %><br><br>
    
    <%= f.hidden_field :user_id, value: session[:user_id] %>
    <%= f.submit %>
<% end %>