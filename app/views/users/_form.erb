<% if flash[:errors] %> 
    <% flash[:errors].each do |error| %> 
    <%= error %> 
    <% end %> 
<% end %>

<%= form_with model:@user do |f| %> 

    <%= f.label :name %> <br>
    <%= f.text_field :name %><br><br>

    <%= f.label :city %> <br>
    <%= f.text_field :city %><br><br>

    <%= f.label :password %> <br>
    <%= f.password_field :password %><br><br>

    <%= f.label :username %> <br>
    <%= f.text_field :username %><br><br>

    <%= f.submit %>
    <% end %> 