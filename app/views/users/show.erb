<h2><%= @user.name %></h2><br>
Username: <%= @user.username %><br><br>
City: <%= @user.city %><br><br>

<% if current_user == @user %>
<%= button_to "Sign Out", logout_path, method: :get %> <br> <br>
<% end %>

<% if @user.featured_food %> 
<h4>Featured Food</h4>
<%= link_to @user.featured_food.name, @user.featured_food %><br><br>
<% end %> 

<% if @user.featured_drink %> 
<h4>Featured Drink</h4>
<%= link_to @user.featured_drink.name, @user.featured_drink %><br><br>
<% end %>

<h4>All Food Recipes:</h4>
<% if current_user == @user %>
<%= button_to "Create New Recipe", new_food_path, method: :get %> <br>
<% end %>

<% @user.foods.each do |f| %> 
<b>- </b> <%= link_to f.name, food_path(f) %><br>
<% end %>


<h4>All Drink Recipes:</h4>
<% if current_user == @user %>
<%= button_to "Create New Recipe", new_drink_path, method: :get %> <br>
<% end %>

<% @user.drinks.each do |d| %>
<b>- </b> <%= link_to d.name, drink_path(d) %><br>
<% end %> 

<h4>All likes</h4> 
<%= @user.all_likes %>



